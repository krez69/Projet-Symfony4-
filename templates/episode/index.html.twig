{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1 class="text-center mt-5 mb-5">Episode index</h1>
    <a class="btn btn-primary mb-4 offset-3" href="{{ path('episode_new') }}">Créer un nouveau épisode</a>
    <div class="container">
        <table class="table-bordered" style="background: white">
            <thead style="background: #00bdde">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for episode in episodes %}
                <tr>
                    <td>{{ episode.id }}</td>
                    <td>{{ episode.title }}</td>
                    <td>{{ episode.slug }}</td>
                    <td>{{ episode.number }}</td>
                    <td>{{ episode.synopsis }}</td>
                    <td>
                        <a class="btn btn-primary mt-2 mb-2 mr-2 ml-2" href="{{ path('episode_show', {'slug': episode.slug}) }}">Afficher</a>
                        <a class="btn btn-danger mt-2 mb-2 mr-2 ml-2" href="{{ path('episode_edit', {'slug': episode.slug}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
